	<!-- Formulario de validacion --> 
  <div id="Validacion" class="text-center" style="background-color: white">
        <div class="text-white pl-3 pr-3 pb-3 pt-4 ml-3 mr-3 rounded-lg " style="background: linear-gradient(to bottom,  #2C758C ,  #F17460 )">
